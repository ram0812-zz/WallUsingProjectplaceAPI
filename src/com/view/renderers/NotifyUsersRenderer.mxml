		<s:Label id="notifyName"
					width="100%"
				    verticalAlign="middle"	
					height="30"
					/>
		<s:HGroup horizontalAlign="right" width="100%">
			<s:Label id="projectName" styleName="textColorGray"
					 width="100%"
					 verticalAlign="middle"
					 height="30"
					 />	
		</s:HGroup>
	</s:HGroup>
			
